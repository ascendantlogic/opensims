# database properties

# JDBC updates: http://www.mysql.com/products/connector/j/
# driver settings in the OpenSIMS properties will look something like:
#
#   db.jdbc.driver = org.gjt.mm.mysql.Driver
#   db.jdbc.jar = /opt/mysql/lib/mm.mysql-2.0.4-bin.jar

databaseName = ${tdk.project}
databaseSchema = ${tdk.project}

createDatabaseUrl = jdbc:mysql://localhost:3306/mysql
buildDatabaseUrl = jdbc:mysql://localhost:3306/${tdk.project}
databaseUrl = jdbc:mysql://localhost:3306/${tdk.project}

torque.database.validationQuery = SELECT 1
